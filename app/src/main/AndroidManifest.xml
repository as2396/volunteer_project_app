            android:name=".activity.RequestUpActivity"
            android:parentActivityName=".activity.RequestActivity" />
        <activity android:name=".activity.CameraActivity" />
        <activity
            android:name=".activity.RequestMoreActivity"
            android:parentActivityName=".activity.RequestActivity" />
